<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_marginBottom="16dp"
    android:id="@+id/container"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageBanner"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:clickable="false"
        android:src="@drawable/ic_home_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_location_on_black_24dp"
        android:drawableTint="@color/colorGrey"
        android:gravity="center"
        android:textSize="12dp"
        android:text="Location"
        app:layout_constraintStart_toStartOf="@+id/bHouseName"
        app:layout_constraintTop_toBottomOf="@+id/bHouseName" />

    <TextView
        android:id="@+id/bHouseName"
        style="@style/TextTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:clickable="false"
        android:textSize="14dp"
        android:text="Boarding House Name"
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageBanner"
        app:layout_constraintTop_toTopOf="@+id/imageBanner" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textColor="#000"
        android:text="Bed Space"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/imageBanner"
        app:layout_constraintTop_toBottomOf="@+id/location" />


    <TextView
        android:id="@+id/price"
        style="@style/defaultButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:clickable="false"
        android:text="price"
        android:textColor="@color/colorWhite"
        android:textSize="12sp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/spaceAvaliable"
        app:layout_constraintStart_toEndOf="@+id/spaceAvaliable"
        app:layout_constraintTop_toTopOf="@+id/spaceAvaliable" />

    <TextView
        android:id="@+id/spaceAvaliable"
        style="@style/defaultButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/button_background_green"
        android:gravity="center"
        android:paddingBottom="1dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="1dp"
        android:text="Availavble"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/imageBanner"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Room"
        android:textColor="#000"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/imageBanner"
        app:layout_constraintTop_toBottomOf="@+id/spaceAvaliable" />

    <TextView
        android:id="@+id/roomsAvailable"
        style="@style/defaultButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/button_background_green"
        android:gravity="center"
        android:paddingBottom="1dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="1dp"
        android:text="N/A"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/textView13"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <TextView
        android:id="@+id/roomPrice"
        style="@style/defaultButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:paddingBottom="1dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="1dp"
        android:text="N/A"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/roomsAvailable"
        app:layout_constraintTop_toTopOf="@+id/roomsAvailable" />
