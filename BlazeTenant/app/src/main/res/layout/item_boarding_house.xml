    <ImageView
        android:id="@+id/imageBanner"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:clickable="false"
        android:src="@drawable/ic_home_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/ic_location_on_black_24dp"
        android:gravity="center"
        android:text="Location"
        android:drawableTint="@color/colorGrey"
        app:layout_constraintStart_toStartOf="@+id/bHouseName"
        app:layout_constraintTop_toBottomOf="@+id/bHouseName" />
    <TextView
        android:id="@+id/bHouseName"
        style="@style/TextTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:clickable="false"
        android:text="Boarding House Name"
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageBanner"
        app:layout_constraintTop_toTopOf="@+id/imageBanner" />

    <TextView
        android:id="@+id/price"
        style="@style/defaultButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:clickable="false"
        android:text="price"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/spaceAvaliable"
        app:layout_constraintStart_toEndOf="@+id/spaceAvaliable"
        app:layout_constraintTop_toTopOf="@+id/spaceAvaliable" />

    <TextView
        android:id="@+id/spaceAvaliable"
        style="@style/defaultButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/button_background_green"
        android:text="Availavble"
        android:textSize="14sp"
